<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:WPFDatePicker.Views"
    xmlns:action="clr-namespace:WPFDatePicker.Mvvm.Actions"
    xmlns:vm="clr-namespace:WPFDatePicker.ViewModels"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity">

    <Style TargetType="{x:Type view:LastAndThisMonthDatePicker}">
        <Setter Property="DataContext">
            <Setter.Value>
                <vm:LastAndThisMonthDatePickerViewModel />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type view:LastAndThisMonthDatePicker}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Horizontal" Height="24">
                            <TextBox x:Name="PART_dateTextBox" Width="200" Text="{Binding SelectedDate}" />
                            
                            <Button x:Name="PART_popupButton" Content="Popup">
                                <i:Interaction.Triggers>
                                    <i:EventTrigger EventName="Click">
                                        <action:SetProperty PropertyName="IsOpen" Value="True" TargetObject="{Binding ElementName=PART_popup}" />
                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </Button>
                            <TextBlock />

                            <!-- TODO: focus on popup -->
                            <Popup x:Name="PART_popup" PlacementTarget="{Binding ElementName=PART_popupButton}" StaysOpen="False">
                                <Popup.Resources>
                                    <DataTemplate x:Key="PickButtonTemplate">
                                        <Button HorizontalContentAlignment="Right"
                                                Command="{Binding DataContext.SpecifyDateCommamnd, RelativeSource={RelativeSource FindAncestor, AncestorType=Popup}}"
                                                CommandParameter="{Binding SpecifyDate}">
                                            <TextBlock Text="{Binding SpecifyDate, StringFormat={}{0:%d}}" />
                                        </Button>
                                    </DataTemplate>
                                </Popup.Resources>
                                <Border Background="#C0C0C0">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel>
                                            <TextBlock Text="Last month" TextAlignment="Center" HorizontalAlignment="Stretch" />
                                            <ItemsControl ItemsSource="{Binding LastMonthDays}"
                                                          ItemTemplate="{StaticResource PickButtonTemplate}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="7" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="This month" TextAlignment="Center" HorizontalAlignment="Stretch" />
                                            <ItemsControl ItemsSource="{Binding ThisMonthDays}"
                                                          ItemTemplate="{StaticResource PickButtonTemplate}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <UniformGrid Columns="7" />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                            </ItemsControl>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2">
                                            <Button Content="Tomorrow" Command="{Binding SpecifyDateCommamnd}" CommandParameter="1" />
                                            <Button Content="Today" Command="{Binding SpecifyDateCommamnd}" />
                                            <Button Content="Yesterday" Command="{Binding SpecifyDateCommamnd}" CommandParameter="-1" />
                                            <Button Content="This day last week" Command="{Binding SpecifyDateCommamnd}" CommandParameter="-7" />
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </Popup>
                            
                        </StackPanel>
                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
