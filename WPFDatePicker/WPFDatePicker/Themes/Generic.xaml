<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:view="clr-namespace:WPFDatePicker.Views"
    xmlns:vm="clr-namespace:WPFDatePicker.ViewModels">

    <Style TargetType="{x:Type view:LastAndThisMonthDatePicker}">
        <Setter Property="DataContext">
            <Setter.Value>
                <vm:LastAndThisMonthDatePickerViewModel />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type view:LastAndThisMonthDatePicker}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Horizontal" Height="24">
                            <TextBox x:Name="PART_dateTextBox" Width="200" Text="{Binding SelectedDate}" />
                            
                            <!-- TODO: -->
                            <Button x:Name="PART_popupButton" Content="Popup" />
                            <TextBlock />

                            <Popup x:Name="PART_popup" PlacementTarget="{Binding ElementName=PART_popupButton}" StaysOpen="False" Width="200">
                            </Popup>
                            
                        </StackPanel>
                        
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
